{
    // For editer
    "editor.cursorStyle": "line",
    "editor.cursorWidth": 4,
    "editor.cursorBlinking": "smooth",
    "editor.cursorSmoothCaretAnimation": true,
    "terminal.integrated.cursorStyle": "line",
    "editor.renderWhitespace": "all",
    "files.autoSave": "afterDelay",
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true, // 关闭自动探测使用tab还是空格
    "files.insertFinalNewline": true,
    "editor.mouseWheelZoom": true, // 鼠标滚动调整字体大小

    // For themes and font
    "workbench.iconTheme": "vscode-great-icons",
    "workbench.colorTheme": "Dracula",
    "editor.fontSize": 22,
    "editor.fontWeight": "500",
    "editor.fontFamily": "Ubuntu Mono derivative Powerline",
    "debug.console.fontFamily": "Ubuntu Mono derivative Powerline",
    "terminal.integrated.fontSize": 20,
    "terminal.integrated.fontWeight": "500",
    "terminal.integrated.fontFamily": "Ubuntu Mono derivative Powerline",

    // For window show
    "window.zoomLevel": 1.1,
    "window.title": "${activeEditorLong}${separator}${rootName}",
    "explorer.openEditors.visible": 0,
    "window.menuBarVisibility": "default",
    "breadcrumbs.enabled": true, //编辑器上方有个导航栏
    "editor.detectIndentation": false,
    "editor.maxTokenizationLineLength": 2000,
    "editor.renderControlCharacters": true,
    "editor.renderLineHighlight": "all",
    "workbench.statusBar.feedback.visible": false,
    "workbench.tree.indent": 14,
    "workbench.view.alwaysShowHeaderActions": true,
    "editor.showFoldingControls": "always",

    // https://code.visualstudio.com/docs/languages/identifiers
    "files.associations": {
        ".userrc": "shellscript"
    },

    // shell script
    "shellformat.path": "/snap/bin/shfmt",
    "shellformat.flag": "-i 4 -ln bash",

    // c++
    "C_Cpp.default.cppStandard": "c++11",
    "C_Cpp.default.cStandard": "c99",
    "C_Cpp.default.intelliSenseMode": "clang-x64",
    "C_Cpp.clang_format_fallbackStyle": "Google",
    "C_Cpp.clang_format_path": "/usr/bin/clang-format",
    "C_Cpp.clang_format_sortIncludes": true,

    // "C_Cpp.intelliSenseEngine": "Disabled",
    "clangd.path": "clangd-8",

    // cmake
    "cmake.buildDirectory": "${workspaceRoot}/cmake-build-debug",
    "cmake.ctest.parallelJobs": 2,
    "cmake.configureOnOpen": true,
    "cmake.environment": {
        "CMAKE_PREFIX_PATH": "/home/icecory/Cpp3rdlib/"
    },
    "cmake.autoRestartBuild": true,
    "cmake.copyCompileCommands": "${workspaceRoot}/compile_commands.json",

    // markdown
    "[markdown]": {
        "editor.wordWrap": "on",
        "editor.quickSuggestions": true
    },

    // python
    // use yapf for format
    // use pylint for linting
    // use microsoft python language server for code complete
    "python.pythonPath": "python3",
    "python.jediEnabled": false,
    "python.autoComplete.addBrackets": true,
    "python.formatting.provider": "yapf",
    "python.formatting.yapfArgs": [],
    "python.workspaceSymbols.enabled": false,
    // https://github.com/Microsoft/vscode-python/issues/3785#issuecomment-466216795 about jupyter token
    "python.dataScience.jupyterServerURI": "http://39.106.34.109:3060/?token=notebook-token",

    // leetcode
    "leetcode.endpoint": "leetcode-cn",
    "leetcode.defaultLanguage": "cpp",

    // git
    "git.autofetch": true,

    // yaml
    "yaml.format.enable": true,

    // execlude file
    "files.exclude": {
        "**/__pycache__": true,
        "node_modules": true
    },
    "search.useGlobalIgnoreFiles": true,

    // terminal
    "terminal.explorerKind": "external",
    "terminal.external.linuxExec": "tilix",
    "terminal.integrated.copyOnSelection": true,
    "terminal.integrated.enableBell": true,
    "terminal.integrated.shell.osx": "/usr/bin/zsh",

    // others
    "editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "extensions.ignoreRecommendations": true,
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
}
