{
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.openEditors.visible": 0,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "files.autoSave": "afterDelay",
    "editor.mouseWheelZoom": true,
    "editor.renderWhitespace": "all",
    "window.zoomLevel": 0.9,
    "window.title": "${activeEditorLong}${separator}${rootName}",

    //theme and font
    "workbench.iconTheme": "vscode-great-icons",
    "workbench.colorTheme": "Dracula",
    "editor.fontSize": 20,
    "editor.fontFamily": "Ubuntu Mono derivative Powerline",
    "editor.fontWeight": "500",
    "terminal.integrated.fontSize": 20,
    "terminal.integrated.fontFamily": "Ubuntu Mono derivative Powerline",
    "terminal.integrated.fontWeight": "500",

    // https://code.visualstudio.com/docs/languages/identifiers
    "files.associations": {
        ".userrc": "shellscript"
    },

    // shfmt
    "shellformat.path": "/snap/bin/shfmt",
    "shellformat.flag": "-i 4 -ln bash",

    "breadcrumbs.enabled": true,
    "git.autofetch": false,
    "window.menuBarVisibility": "default",

    // clangd
    "clangd.path": "clangd-8",

    // cmake
    "cmake.buildDirectory": "${workspaceRoot}/cmake-build-debug",
    "cmake.ctest.parallelJobs": 2,
    "cmake.environment": {
        "CMAKE_PREFIX_PATH": "/home/icecory/Cpp3rdlib/"
    },
    "cmake.configureOnOpen": true,

    // markdown
    "[markdown]": {
        "editor.wordWrap": "on",
        "editor.quickSuggestions": true
    },

    // python
    "python.pythonPath": "python3",
    "python.linting.flake8Args": [
        "--max-line-length=100"
    ],

    // execlude file
    "files.exclude": {
        "**/__pycache__": true
    },
    "extensions.ignoreRecommendations": false,
    "http.proxyStrictSSL": false,
    "http.proxySupport": "off",

    //"C_Cpp.default.intelliSenseMode": "gcc-x64",
}